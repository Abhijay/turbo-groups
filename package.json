{
    "name": "turbo-groups",
    "version": "1.0.0",
    "description": "Simplify Turborepo task execution with named package groups",
    "keywords": [
        "turborepo",
        "monorepo",
        "turbo",
        "groups",
        "filters",
        "workspace"
    ],
    "author": "Cloaked Inc.",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "turbo-group": "./dist/cli.js"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "check-types": "tsc --noEmit",
        "lint": "eslint ./ --ext .ts --ignore-path .gitignore",
        "lint:fix": "eslint ./ --ext .ts --ignore-path .gitignore --fix",
        "format": "prettier . --ignore-path .gitignore --check",
        "format:fix": "prettier . --ignore-path .gitignore --write",
        "prepublishOnly": "pnpm run build"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/node": "^18.11.17",
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "eslint": "^8.30.0",
        "prettier": "^2.8.1",
        "typescript": "^4.9.5"
    },
    "peerDependencies": {
        "turbo": ">=1.0.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/abhijay/monorepo-groups.git"
    },
    "bugs": {
        "url": "https://github.com/abhijay/monorepo-groups/issues"
    },
    "homepage": "https://github.com/abhijay/monorepo-groups#readme"
}

